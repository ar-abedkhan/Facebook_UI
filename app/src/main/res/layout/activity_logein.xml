<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".logein">

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/cover"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:src="@drawable/logeinbk"
            />


        <LinearLayout
            android:id="@+id/language"
            app:layout_constraintTop_toBottomOf="@id/cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="বাংলা"
                android:textSize="16dp"
                />

            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="30sp"
                android:layout_marginTop="-9dp"
                />
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Polski"
                android:textSize="16dp"
                />
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="30sp"
                android:layout_marginTop="-9dp"
                />
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More..."
                android:textSize="16dp"
                />












        </LinearLayout>




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                                    >

            <LinearLayout
                android:background="@color/white"
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="30sp"
                android:layout_marginBottom="30sp"
                android:layout_marginEnd="30sp"
                >



                <ImageView
                    android:id="@+id/img"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/facebook"
                    android:visibility="gone"
                    />
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <EditText
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/mailORnumber"
        android:hint="Phone number or email address"
        />
<ImageView
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_width="25dp"
    android:layout_height="30dp"
    android:src="@android:drawable/ic_menu_info_details"
    />

</androidx.constraintlayout.widget.ConstraintLayout>



                <EditText
                    android:id="@+id/pass"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="Password"/>

                <androidx.appcompat.widget.AppCompatButton

                    android:id="@+id/logeinButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/logein"
                    android:text="Log In"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    />


                <TextView
                    android:id="@+id/forgetPassbutton"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="16dp"
                    android:text="Forgotten \n password?"
                    android:textColor="#166FE5"
                    />


            </LinearLayout>










        </ScrollView>


        <LinearLayout
            android:id="@+id/or"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            >
            <View
                android:layout_width="150dp"
                android:layout_height="1dp"
                android:background="#1E000000"

                />
            <TextView
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="OR"
                />
            <View

                android:layout_width="150dp"
                android:layout_height="1dp"

                android:background="#1E000000"
                />

        </LinearLayout>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createnewaccountButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Create New Facebook Account"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/create"
            android:textStyle="bold"
            android:textSize="16dp"
            />









    </LinearLayout>
























</androidx.constraintlayout.widget.ConstraintLayout>