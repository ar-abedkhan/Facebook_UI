<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/requestpersonimage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/test"
        />
    <TextView
        android:id="@+id/requestpersonname"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/requestpersonimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Md tanvir islam"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:textSize="18.5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/requesttime"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content"
        android:text="1y"
        android:layout_marginStart="15dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mutualfdimg"
        app:layout_constraintTop_toBottomOf="@id/requestpersonname"
        app:layout_constraintStart_toEndOf="@id/requestpersonimage"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:src="@drawable/text"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        />
    <TextView
        android:id="@+id/mutualfd"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/requestpersonname"
        app:layout_constraintBottom_toTopOf="@id/confirm_button"
        app:layout_constraintStart_toEndOf="@id/mutualfdimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 mutual friend"
        android:layout_marginStart="5dp"
        />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/confirm_button"
            app:layout_constraintTop_toBottomOf="@id/mutualfdimg"
            app:layout_constraintStart_toEndOf="@id/requestpersonimage"
            android:layout_marginStart="15dp"
            android:layout_marginTop="8dp"
             android:textSize="18dp"
            android:text="Confirm"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/logein"
            />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delate_button"
        app:layout_constraintTop_toBottomOf="@id/mutualfdimg"
        app:layout_constraintStart_toEndOf="@id/confirm_button"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:textSize="18dp"
        android:text="Confirm"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:background="@drawable/textbk"
        />


</androidx.constraintlayout.widget.ConstraintLayout>