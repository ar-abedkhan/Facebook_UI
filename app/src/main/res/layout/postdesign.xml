<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    >




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    >

    <View
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#1E000000"
        />
    <LinearLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"

        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilepic"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/myimg"
            android:clickable="true"
            />

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginStart="7dp"
         >

         <TextView
             android:clickable="true"
             android:id="@+id/profilename"
             android:textColor="@color/black"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Creative it institute"
             android:textStyle="bold"
             android:textSize="18.5dp"
             />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="16 Oct at 5:03 pm"
             android:textSize="12dp"
             />

     </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:gravity="end"
            >

            <ImageView
                android:clickable="true"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:src="@drawable/more"
            android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                />
            <ImageView
                android:clickable="true"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/ic_baseline_close_24"
            android:layout_gravity="end"
                />




        </LinearLayout>





    </LinearLayout>

<TextView
    android:id="@+id/caption_text"
    app:layout_constraintTop_toBottomOf="@id/info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="hello this id text"
    android:layout_marginStart="5dp"
    android:textSize="18dp"
    android:textColor="@color/black"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    />

<ImageView
    android:id="@+id/postimg"
    app:layout_constraintTop_toBottomOf="@id/text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/myimg2"
    android:visibility="gone"
    />


    <LinearLayout
        android:contextClickable="true"
        android:id="@+id/linear"
        app:layout_constraintTop_toBottomOf="@id/postimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginStart="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            android:layout_marginEnd="-5dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/emoji"
            android:layout_marginEnd="-5dp"
            />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/love"
            android:layout_marginEnd="-5dp"

            />

      <TextView

          android:layout_width="wrap_content"
          android:layout_height="25dp"
          android:text="1.4 k"
          android:layout_marginStart="9dp"
          />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:gravity="end"
            >



            <TextView
                android:contextClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="100 comments"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:contextClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="."
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_marginTop="-20dp"
                />

            <TextView
                android:contextClickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="90 shear"
                android:layout_marginEnd="8dp"

                />


        </LinearLayout>


    </LinearLayout>


    <View
        app:layout_constraintTop_toBottomOf="@id/linear"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#1E000000"
        />


<LinearLayout
    app:layout_constraintTop_toBottomOf="@id/linear"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:layout_marginBottom="8dp"
    android:weightSum="3">


    <ImageView
        android:contextClickable="true"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/like1"
        android:layout_marginStart="-20dp"
        />
    <TextView
        android:contextClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:textAlignment="center"
        android:layout_marginStart="-30dp"
        android:textSize="18dp"
        />




    <ImageView
        android:clickable="true"
        android:layout_weight="1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/comment"
        />
    <TextView
        android:contextClickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:textAlignment="center"
        android:layout_marginStart="-30dp"
        android:textSize="18dp"
        />




    <ImageView
        android:contextClickable="true"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/share"
        />
    <TextView
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shear"
        android:textAlignment="center"
        android:layout_marginStart="-30dp"
        android:textSize="18dp"
        android:layout_marginEnd="20dp"
        />


</LinearLayout>




</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>